{
    "compilerOptions": {
	"resolveJsonModule": true,
	"target": "ESNext",
	"module": "ESNext",
	"outDir": "dist",
	"rootDir": "src",
	"strict": true,
	"esModuleInterop": true,
	"noImplicitAny": true,
	"strictNullChecks": true,
	"importsNotUsedAsValues": "error",
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true
    }
}
